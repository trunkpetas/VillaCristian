<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <Button
        android:id="@+id/btn_config_baliza"
        android:layout_width="413dp"
        android:layout_height="48dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/btn_uno"
        android:backgroundTint="#A1FFEB3B"
        android:fontFamily="casual"
        android:text="CONFIG. BALIZA"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_auditoria" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="148dp"
        android:layout_height="53dp"
        android:background="@drawable/btn_uno"
        android:fontFamily="casual"
        android:textStyle="bold|italic"
        android:text="EmuladorAlexCristian"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_codificacion"
        android:layout_width="413dp"
        android:layout_height="48dp"
        android:background="@drawable/btn_uno"
        android:backgroundTint="#A1FFEB3B"
        android:fontFamily="casual"
        android:text="CODIFICACIÓN MASIVA"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/btn_busqueda_sku"
        android:layout_width="413dp"
        android:layout_height="48dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/btn_uno"
        android:backgroundTint="#A1FFEB3B"
        android:fontFamily="casual"
        android:text="BÚSQUEDA SKU"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_codificacion" />

    <Button
        android:id="@+id/btn_inventario"
        android:layout_width="413dp"
        android:layout_height="48dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/btn_uno"
        android:backgroundTint="#A1FFEB3B"
        android:fontFamily="casual"
        android:text="INVENTARIO"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_busqueda_sku" />

    <Button
        android:id="@+id/btn_auditoria"
        android:layout_width="413dp"
        android:layout_height="48dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/btn_uno"
        android:backgroundTint="#A1FFEB3B"
        android:editable="false"
        android:fontFamily="casual"
        android:text="AUDITORIA"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_inventario" />

    <Button
        android:id="@+id/btn_desactivar"
        android:layout_width="413dp"
        android:layout_height="48dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/btn_uno"
        android:backgroundTint="#A1FFEB3B"
        android:fontFamily="casual"
        android:text="DESACTIVAR"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_config_baliza" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="234dp"
        android:layout_height="47dp"
        android:ems="10"
        android:inputType="date"
        android:textStyle="bold|italic"
        android:fontFamily="casual"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_desactivar" />

</androidx.constraintlayout.widget.ConstraintLayout>